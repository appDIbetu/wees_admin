<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/circular"
    android:clickable="true"
    android:focusable="true"
    android:padding="4dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/thumbnail"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop" />
    <!--
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/padding_10"
        android:scaleType="centerCrop" />
-->
    <TextView
        android:id="@+id/newsSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thumbnail"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:layout_below="@+id/title"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/urlA"
        android:layout_width="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#666a6d"
        android:textSize="13sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:textAllCaps="false"
        android:layout_below="@id/urlA"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <!--
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="@dimen/activity_padding_horizontal"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/description"
        android:textSize="15sp" />
    -->

</RelativeLayout>